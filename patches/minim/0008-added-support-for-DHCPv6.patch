@@ -27,6 +27,9 @@ config dhcp lan
 	option start 	100
 	option limit	150
 	option leasetime	12h
+	option dhcpv6 server
+	option ra server
+	option ra_flags 'managed-config other-config'
 
 config dhcp wan
 	option interface	wan
